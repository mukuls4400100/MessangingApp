@model MessangingApp1.Models.Channel
@{
    ViewBag.Title = "Index";
}

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h1>@ViewBag.message</h1>
            </div>
            <div class="card-body">
                @*"actionName" "controllerName"*@
                @using (Html.BeginForm("Index", "Channel", FormMethod.Post))
                {
                    //@Html.TextBoxFor(m => m.UserId , new { style = "display: none;" , @placeholder = "Title" })

                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.ChannelName)
                        @Html.TextBoxFor(m => m.ChannelName, "", new { @class = "form-control", @placeholder = "Title" })
                        @Html.ValidationMessageFor(m => m.ChannelName, "", new { @class = "badge badge-danger" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description)
                        @Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Description" })
                        @Html.ValidationMessageFor(m => m.Description, "", new { @class = "badge badge-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Create" />
                    </div>
                }
                <button>@Html.ActionLink("Next", "Index", "Tag", null, null)</button>
            </div>
        </div>
    </div>
</div>